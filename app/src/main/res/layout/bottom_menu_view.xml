<?xml version="1.0" encoding="utf-8"?>
<com.sushil.mausam.customviews.BottomMenuView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="vertical">

    <View
        android:id="@+id/shadow"
        android:layout_width="match_parent"
        android:layout_height="4dp"
        android:background="@drawable/shadow_top_view" />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@+id/shadow"
        android:background="#FBFBFB"
        android:orientation="horizontal"
        android:weightSum="3">


        <TextView
            android:id="@+id/textViewHome"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:drawablePadding="4dp"
            android:gravity="center"
            android:paddingTop="5dp"
            android:paddingBottom="5dp"
            android:text="@string/home"
            android:textColor="@color/gunmetal"
            android:textSize="12sp"
            app:drawableTopCompat="@drawable/ic_home_unselected" />

        <TextView
            android:id="@+id/textViewSetting"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:drawablePadding="4dp"
            android:gravity="center"
            android:paddingTop="5dp"
            android:paddingBottom="5dp"
            android:text="@string/settings"
            android:textColor="@color/gunmetal"
            android:textSize="12sp"
            app:drawableTopCompat="@drawable/ic_settings_unselected" />

        <TextView
            android:id="@+id/textViewHelp"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:drawablePadding="4dp"
            android:gravity="center"
            android:paddingTop="5dp"
            android:paddingBottom="5dp"
            android:text="@string/help"
            android:textColor="@color/gunmetal"
            android:textSize="12sp"
            app:drawableTopCompat="@drawable/ic_help_unselected" />

    </LinearLayout>

</com.sushil.mausam.customviews.BottomMenuView>